function clearText(field) 
{

    if (field.defaultValue == field.value) field.value = '';

    else if (field.value == '') field.value = field.defaultValue;

}
<!-- Add the javascript script text  --> 
 

jQuery(document).ready(function($){
	$('a[rel*=facebox]').facebox({
	        loadingImage : 'http://pwbcleint.com/ditchthepitch/assets/js/facebox/loading.gif',
	        closeImage   : 'http://pwbcleint.com/ditchthepitch/assets/js/facebox/closelabel.png'
	      });
	$("#winepref1").click(function(){
		$("#content_pane1").hide();
		$("#content_pane2").show();
		
	});	
	
    $("#wineprefback").click(function(){
		    $("#content_pane2").hide();
		    $("#content_pane1").show();
		
	    });	
    
    $("#loginsubmit").click(function(){
        	
			
			var statuschk = true;
			
    		if($("#loginemail").val() == "")
    		{
				statuschk = false;
				$("#err1").show();
				
            }
    		else
    		{
    			statuschk = true;
    			$("#err1").hide();
        	}

			if($("#loginpassword").val() == "")
			{
				statuschk = false;
				$("#err2").show();
			}
			else
			{
				statuschk = true;
				$("#err2").hide();
			}	

			if(statuschk == false)
			{
				$("#mainerror").show();
			}
			else
			{
				$("#mainerror").hide();
				$("#formlogin").submit();
			}
        	
        });

   });

jQuery(window).load(function(){
	$("#statusmsg").delay(2800).fadeOut(900);
	
});

</script>

