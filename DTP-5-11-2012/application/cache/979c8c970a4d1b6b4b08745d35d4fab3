Cufon.replace('#footer .col h3,.banner strong', { fontFamily: 'Myriad Pro Regular', hover: true });
Cufon.replace('#bottleArea h1', { fontFamily: 'Myriad Pro Condensed', hover: true, textShadow: '1px 1px #666' });
